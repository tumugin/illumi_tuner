{
  "compilerOptions": {
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "@": ["src"]
    }
  },
  "typeRoots": ["node_modules/@types", "type/*.d.ts"],
  "includes": "src/**/*.ts"
}
